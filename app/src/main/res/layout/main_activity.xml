<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:id="@+id/myView2"
    android:orientation="vertical"
    android:background="?attr/hcbgColor"
    android:backgroundTintMode="screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/timerholder"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/quitButton"
                android:textSize="20sp"
                android:onClick="quitPressed"
                android:textColor="?attr/hcQuitText"
                android:background="@drawable/quitbackground"
                android:layout_margin="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp" />
            <!--<Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H"
                android:id="@+id/quitButton2"
                android:textSize="16sp"
                android:onClick="onHide"
                android:textColor="#ff999999"
                android:background="@drawable/quitbackground"
                android:visibility="gone"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:id="@+id/quitButton3"
                android:textSize="12pt"
                android:onClick="onOpen"
                android:textColor="?attr/hcQuitText"
                android:background="@drawable/quitbackground"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>-->
            <TextView
                android:layout_marginLeft="146dp"
                android:layout_marginStart="46dp"
                android:layout_marginTop="0dp"
                android:layout_width="82dp"
                android:layout_height="36dp"
                android:text="0"
                android:id="@+id/scoreLabel"
                android:layout_gravity="start"
                android:width="80dp"
                android:gravity="start"
                android:textColor="?attr/hcScoreText"
                android:height="26dp"
                android:minHeight="26dp"
                android:textSize="26dp"
                android:padding="0dp"
                android:visibility="visible" />

            <TextView
                android:layout_marginRight="130dp"
                android:layout_marginEnd="130dp"
                android:layout_marginTop="4dp"
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:text="@string/MFTitle"
                android:id="@+id/mfpressed"
                android:layout_gravity="end"
                android:width="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="?attr/hcMFBtnTextColor"
                android:background="@drawable/mfbackground"
                android:height="22dp"
                android:minHeight="22dp"
                android:textSize="18sp"
                android:padding="0dp"
                android:visibility="gone" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:text="30.00 sec"
            android:id="@+id/mTimeLabel"
            android:layout_gravity="end"
            android:width="40dp"
            android:gravity="top|end"
            android:textColor="?attr/hctextColor"
            android:height="36dp"
            android:minHeight="36dp"
            android:paddingTop="0dp"
            android:paddingRight="6dp" />
    </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/timerholder"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:gravity="right"
            android:id="@+id/lifeholder">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/life3"
                android:src="@drawable/life4x"
                android:layout_gravity="top|end"
                android:visibility="gone"
                android:layout_marginRight="52dp"
                android:layout_marginEnd="52dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/life2"
                android:src="@drawable/life4x"
                android:layout_gravity="top|end"
                android:visibility="gone"
                android:layout_marginRight="28dp"
                android:layout_marginEnd="28dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/life1"
                android:src="@drawable/life4x"
                android:layout_gravity="top|end"
                android:visibility="gone"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                />


            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="@string/GameOverTitle"
                android:id="@+id/GameOverLabel"
                android:layout_gravity="end"
                android:gravity="center_horizontal|end"
                android:textColor="?attr/hctimeIsOutColor"
                android:textSize="22sp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>

        <com.philolog.hc.TypeWriter
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:text=""
            android:layout_gravity="center"
        android:width="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="?attr/hctextColor"
        android:height="180dp"
        android:minHeight="90dp"
        android:layout_below="@+id/myView3"
        android:foregroundTintMode="src_over"
        android:textIsSelectable="false"
        android:textSize="26sp"
        android:textStyle="normal"
        android:visibility="visible"
            android:elevation="22dp"
            android:id="@+id/origTextView" />

    <com.philolog.hc.TypeWriter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/stemTextView"
        android:width="40dp"
        android:layout_below="@id/origTextView"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:layout_alignParentBottom="false"
        android:textColor="?attr/hcStemTextColor"
        />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/editholder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_below="@id/origTextView"
        android:layout_height="0dp"
        android:layout_weight=".75">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/greenCheckRedX"
            android:src="@drawable/greencheck"
            android:layout_gravity="center_vertical|end"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
        <com.philolog.hc.EditTypeWriter
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            android:textSize="18pt"
            android:textIsSelectable="true"
            android:textColor="?attr/hctextColor"
            android:ellipsize="start"
            android:gravity="center_vertical|center_horizontal"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:configChanges="orientation|keyboardHidden"
            android:background="#00000000"/>

    </FrameLayout>
    <com.philolog.hc.TypeWriter
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:id="@+id/changedTextView"
        android:layout_gravity="top"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="?attr/hctextColor"
        android:textIsSelectable="false"
        android:paddingTop="0dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:text="@string/ContinueButtonTitle"
            android:id="@+id/continueButton"
            android:layout_alignParentBottom="true"
            android:textColor="?attr/hcContinueBtnTextColor"
            android:background="@drawable/continuebutton"
            android:visibility="invisible"
            android:textSize="12pt"
            android:onClick="onContinuePressed"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />
    </LinearLayout>
    <!--android.inputmethodservice.KeyboardView-->
    <com.philolog.hc.GreekKeyboard
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:padding="1dp"
        android:translationZ="999dp"
        android:theme="@style/HCDayNight"
        />
</RelativeLayout>
