<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/hcbgColor">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/hcVerbListHeaderBGColor">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="H&amp;Q Verbs"
            android:id="@+id/VerbListTitle"
            android:layout_gravity="start"
            android:gravity="center_horizontal|start"
            android:textColor="?attr/hcVerbListHeaderTextColor"
            android:textSize="28sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
<!--Search bar-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLOL"
        android:layout_margin="5dp"
        android:background="@drawable/search_frame">

        <!--fake focusable, so EditText doesn't get focus on load-->
        <LinearLayout

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"
            />
        <Button
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="8dp"
            android:paddingRight="6dp"
            android:text="Greek:"
            android:textColor="?attr/hctextColor"
            android:textSize="21sp"
            android:paddingTop="6dp"
            android:paddingBottom="0dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textAllCaps="false"/>
        <EditText
            android:id="@+id/word_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/toggleButton"
            android:layout_toLeftOf="@id/clear"
            android:layout_gravity="left"
            android:text=""
            android:textSize="21sp"
            android:maxLines="1"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/transparent"
            android:textCursorDrawable="@drawable/phcursor"
            android:textColor="?attr/hctextColor"
            android:textIsSelectable="true"/>
        <Button
            android:id="@+id/clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="-8dp"
            android:padding="0dp"

            android:text=""
            android:onClick="clearSearch"
            android:background="@drawable/xicon"
            android:minHeight="10dp"
            android:minWidth="10dp"/>
    </RelativeLayout>
    <!--End search bar-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_gravity="center_horizontal"
        android:background="?attr/hcbgColor" />
</LinearLayout>
